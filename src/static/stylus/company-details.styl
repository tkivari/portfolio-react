.company-details-container {

    position relative

    .company-details {
        display none
        position relative
        min-height 400px
        margin 10px 0px 10px 10px
        width: calc(100% - 30px);
        top: 0;
        border-radius: 5px;
        padding: 10px;
        background #eee

        & .company-fade-in {
            opacity 0
            transition opacity 1s
        }
        
        &.selected {
            display block

            & .company-fade-in {
                opacity 1    
            }
        }
    }

}