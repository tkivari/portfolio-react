.highlighted-item {
    width: 80%;
    margin-top 0px

    & ~ .highlighted-item {
        margin-top 30px    
    }

    .point-text {
        background #d8d8d8
        margin 5px 0 5px 25px
        padding 10px
        width 100%
        border-radius: 5px;
    }

    .highlight-header {
        width 100%
        position relative

        .highlight-title {
            position: absolute;
            top: 6px;
            padding-left: 50px;
            left: 30px;
            height: 40px;
            z-index: 1;
            vertical-align: middle;
            width: 100%;
            border-radius: 5px;
            padding-top: 10px;
            font-family: 'Ubuntu';
            font-size: 25px;
            z-index 1
        }

        .circle-container {
            position: relative;
            width: 60px;
            height: 60px;
            margin-bottom 5px

            .highlight-circle {
                border-radius: 50%;
                width: 60px;
                height: 60px;
                position: absolute;
                z-index 2
            }

            .highlight-icon {
                width: 50px;
                height: 50px;
                font-size: 25px;
                position: absolute;
                top: calc(50% - 15px);
                z-index 3
                
                &.code {
                    left: calc(50% - 16px);    
                }

                &.palette {
                    left: calc(50% - 13px);
                }

                &.lightbulb {
                    left: calc(50% - 9px);
                }

                &.marker {
                    left: calc(50% - 13px);
                }
            }
        }
    }
    
    
}