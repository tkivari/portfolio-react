.highlighted-item {
    width: 100%;
    margin-top 0px

    & ~ .highlighted-item {
        margin-top 30px    
    }

    .highlight-points {
        .point-text {
            border-bottom: 1px solid #ddd;
            margin: 5px 0;
            padding: 10px;
            border-radius: 0px;
            line-height: 22px;
            font-size: 15px;
            font-family: 'Nunito',sans-serif;
        }

        div {
            &:last-child {
                .point-text {
                    border-bottom none
                }
            }
        }
    }

    .highlight-header {
        width 100%
        position relative
        // max-height 55px

        .highlight-title {
            position: relative;
            top: -60px;
            padding-left: 50px;
            margin-left: 30px;
            height: 37px;
            z-index: 1;
            border-radius: 5px;
            padding-top: 12px;
            font-family: 'Ubuntu';
            font-size: 20px;
            z-index: 1;
            margin-bottom: -50px;
        }

        .circle-container {
            position: relative;
            width: 60px;
            height: 60px;
            margin-bottom 5px

            .highlight-circle {
                border-radius: 50%;
                width: 50px;
                height: 50px;
                position: absolute;
                z-index 2;
                border 5px solid #eee
            }

            .highlight-icon {
                width: 50px;
                height: 50px;
                font-size: 25px;
                position: absolute;
                top: calc(50% - 15px);
                z-index 3
                left 15px
                
                &.code {
                    left: calc(50% - 16px);    
                }

                &.palette {
                    left: calc(50% - 13px);
                }

                &.lightbulb {
                    left: calc(50% - 9px);
                }

                &.marker {
                    left: calc(50% - 13px);
                }

                &.paint-brush {
                    left: calc(50% - 12px);
                }

                &.python {
                    left: calc(50% - 12px);
                }

                &.wordpress {
                    left: calc(50% - 13px);
                }

                &.html {
                    left: calc(50% - 10px);
                }

                &.database {
                    left: calc(50% - 11px);
                }

                &.comment {
                    left: calc(50% - 12px);
                }

                &.trophy {
                    left: calc(50% - 17px);
                }
                &.php {
                    left: calc(50% - 16px);
                }
            }
        }
    }
    
    
}


@media (max-width:400px) {
    .highlighted-item {

        .highlight-points {
            .point-text {
                margin: 2px 0;
                padding: 4px 10px;
                line-height: 22px;
                font-size: 12px;
                font-family: 'Nunito',sans-serif;
                border 0
                border-bottom: 1px solid #ddd;
                background #eee
                border-radius 0
            }

            div {
                &:last-child {
                    .point-text {
                        border-bottom none
                    }
                }
            }

        }

        .highlight-header {

            margin-bottom: 14px;
            height: 40px;

            .circle-container {
                .highlight-circle {
                    border-radius: 50%;
                    width: 35px;
                    height: 35px;
                    position: absolute;
                    z-index: 2;
                    border: 5px solid #eee;
                }

                .highlight-icon {
                    width: 50px;
                    height: 50px;
                    font-size: 16px;
                    position: absolute;
                    top: calc(50% - 17px);
                    z-index: 3;

                    &.code {
                        left: calc(50% - 17px);    
                    }

                    &.palette {
                        left: calc(50% - 13px);
                    }

                    &.lightbulb {
                        left: calc(50% - 9px);
                    }

                    &.marker {
                        left: calc(50% - 15px);
                    }

                    &.paint-brush {
                        left: calc(50% - 16px);
                    }

                    &.python {
                        left: calc(50% - 15px);
                    }

                    &.node-js {
                        left: calc(50% - 17px);
                    }

                    &.wordpress {
                        left: calc(50% - 15px);
                    }

                    &.html {
                        left: calc(50% - 13px);
                    }

                    &.database {
                        left: calc(50% - 14px);
                    }

                    &.comment {
                        left: calc(50% - 15px);
                    }

                    &.trophy {
                        left: calc(50% - 17px);
                    }
                    &.php {
                        left: calc(50% - 18px);
                    }
                }
            }

            .highlight-title {
                position: relative;
                top: -60px;
                padding-left: 30px;
                margin-left: 30px;
                height: 27px;
                z-index: 1;
                border-radius: 5px;
                padding-top: 8px;
                font-family: 'Ubuntu';
                font-size: 16px;
                z-index: 1;
                margin-bottom: -55px;
            }
        }
    }
}