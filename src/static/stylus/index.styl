@import url('https://fonts.googleapis.com/css?family=Merriweather');
@import 'shared/_header.styl'
@import 'shared/_containers.styl'

body {
    margin 0
    padding 0
    font-family 'Merriweather', serif
    background #292929
}

.uppercase {
    text-transform uppercase
}

.center {
    text-align center
}

.vertical-center {
    vertical-align middle
}

.full-height {
    display flex
    align-items center
    background-size cover
    height 100vh
}

.clear {
    clear both
}

h1 {
    color white
    text-align left
    display block
    font-family 'Ubuntu', sans-serif
    text-transform none
    font-weight normal
    font-size 25px
    padding 10px 10px 0
    background #212121
    // background-image: linear-gradient(#2d2d2d, black);
    border-radius 5px 5px 0 0
    margin 0
}